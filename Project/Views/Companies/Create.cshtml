                @Html.EditorFor(model => model.LocationLinks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LocationLinks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3 mb-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

